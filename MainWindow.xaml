<Window x:Class="LegendBorn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="LegendBorn"
        Height="600" Width="920"
        WindowStartupLocation="CenterScreen"
        Background="#0B0F1A"
        Foreground="#EAF0FF"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="CanResize"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            CornerRadius="16"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/LauncherTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Background (Auth screen) -->
            <ImageBrush x:Key="AuthStartBg"
                        ImageSource="pack://application:,,,/Assets/launcherstart.png"
                        Stretch="UniformToFill"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border Style="{StaticResource RootBorderStyle}">
        <Grid>

            <!-- BACKGROUND -->
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#060718" Offset="0"/>
                            <GradientStop Color="#0B0F1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Ellipse Width="560" Height="560" Opacity="0.10" HorizontalAlignment="Left" Margin="-180,-180,0,0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#A855F7" Offset="0"/>
                            <GradientStop Color="#00A855F7" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Ellipse Width="640" Height="640" Opacity="0.08" HorizontalAlignment="Right" Margin="0,-240,-240,0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#7C3AED" Offset="0"/>
                            <GradientStop Color="#007C3AED" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>

            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOP BAR -->
                <Border Grid.Row="0" Style="{StaticResource TopBarStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: brand -->
                        <Button Grid.Column="0"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                ToolTip="Главная"
                                Command="{Binding OpenStartCommand}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- FIX: logo instead of "LB" -->
                                <Border Width="34" Height="34" CornerRadius="12" Background="#22FFFFFF" VerticalAlignment="Center">
                                    <Image Source="pack://application:,,,/Assets/logolauncher.png"
                                           Stretch="Uniform"
                                           Margin="5"/>
                                </Border>

                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="LEGENDBORN" FontWeight="Bold" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Launcher" Foreground="{StaticResource TextDim}" FontSize="11"/>
                                        <TextBlock Text="  •  " Foreground="{StaticResource TextDim}" FontSize="11"/>
                                        <TextBlock Text="{Binding LauncherVersion}" Foreground="{StaticResource TextDim}" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- DRAG AREA -->
                        <Border Grid.Column="1"
                                Background="Transparent"
                                MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown"/>

                        <!-- RIGHT -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                            <!-- Profile -->
                            <Button Style="{StaticResource ProfileButton}"
                                    Margin="0,0,10,0"
                                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVis}}"
                                    Command="{Binding OpenProfileCommand}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="24" Height="24" CornerRadius="10" ClipToBounds="True" Background="#24324B">
                                        <Grid>
                                            <TextBlock Text="{Binding UserInitial}"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            <Image Source="{Binding AvatarUrl, IsAsync=True}" Stretch="UniformToFill"/>
                                        </Grid>
                                    </Border>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SiteUserName}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="3"
                                               Margin="8,0,0,0"
                                               Foreground="{StaticResource TextDim}"
                                               Text="▾"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <Button.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Профиль" Command="{Binding OpenProfileCommand}"/>
                                        <Separator/>
                                        <MenuItem Header="Выйти" Command="{Binding SiteLogoutCommand}"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                            <Button Style="{StaticResource WinCtlButton}"
                                    ToolTip="Настройки"
                                    Command="{Binding OpenSettingsCommand}">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="14"/>
                            </Button>

                            <Button Style="{StaticResource WinCtlButton}"
                                    ToolTip="Свернуть"
                                    Click="Minimize_OnClick">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE921;" FontSize="14"/>
                            </Button>

                            <Button Style="{StaticResource WinCtlButton}"
                                    ToolTip="Закрыть"
                                    Click="Close_OnClick">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="14"/>
                            </Button>

                        </StackPanel>
                    </Grid>
                </Border>

                <!-- CONTENT -->
                <TabControl Grid.Row="2"
                            Style="{StaticResource HiddenTabsStyle}"
                            SelectedIndex="{Binding SelectedMenuIndex}">

                    <!-- 0) AUTH -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource ScreenFrameStyle}">
                                <Grid>
                                    <Rectangle Fill="{StaticResource AuthStartBg}"/>

                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#45060718" Offset="0"/>
                                                <GradientStop Color="#B0060718" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Width="520">

                                            <TextBlock Text="Добро пожаловать"
                                                       FontSize="26"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>

                                            <TextBlock Margin="0,10,0,0"
                                                       Foreground="{StaticResource TextDim}"
                                                       FontSize="13"
                                                       TextAlignment="Center">
                                                Авторизация выполняется через сайт.
                                            </TextBlock>

                                            <Button Style="{StaticResource PrimaryButton}"
                                                    Content="{Binding LoginButtonText}"
                                                    Command="{Binding LoginViaSiteCommand}"
                                                    Margin="0,18,0,0"
                                                    Height="52"
                                                    FontSize="15"
                                                    Padding="26,0"/>

                                            <Border Margin="0,14,0,0"
                                                    Background="#7A0F172A"
                                                    BorderBrush="{StaticResource StrokeGlow}"
                                                    BorderThickness="1"
                                                    CornerRadius="16"
                                                    Padding="16"
                                                    Visibility="{Binding IsWaitingSiteConfirm, Converter={StaticResource BoolToVis}}">
                                                <StackPanel>
                                                    <TextBlock Text="Подтверди вход на сайте"
                                                               FontWeight="SemiBold"/>

                                                    <TextBlock Margin="0,8,0,0"
                                                               Foreground="{StaticResource TextDim}"
                                                               FontSize="12">
                                                        Статус: <Run Text="{Binding StatusText}"/>
                                                    </TextBlock>

                                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                        <Button Style="{StaticResource GhostButton}"
                                                                Content="Скопировать ссылку"
                                                                Height="42"
                                                                Padding="18,0"
                                                                Click="CopyOrRegenLoginLink_OnClick"/>

                                                        <Button Style="{StaticResource DangerButton}"
                                                                Content="Отменить"
                                                                Command="{Binding SiteLogoutCommand}"
                                                                Margin="12,0,0,0"
                                                                Height="42"
                                                                Padding="18,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                        </StackPanel>

                                        <TextBlock Grid.Row="1"
                                                   Margin="0,0,0,14"
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center">
                                            <Run Text="{Binding StatusText}"/>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 1) START -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource ScreenFrameStyle}">
                                <Grid>
                                    <Image Source="pack://application:,,,/Assets/legendcraft.jpg"
                                           Stretch="UniformToFill"
                                           Opacity="0.42"/>

                                    <Rectangle Fill="#9A060718"/>

                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#E0121228" Offset="0"/>
                                                <GradientStop Color="#84121228" Offset="0.55"/>
                                                <GradientStop Color="#B0060718" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <Border Background="#00000000" Padding="26">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.55*"/>
                                                <ColumnDefinition Width="26"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- LEFT -->
                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Margin="0,14,0,0">

                                                <TextBlock Text="{Binding PackName}"
                                                           FontSize="56"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource TextStrong}"/>

                                                <TextBlock Margin="0,10,0,0"
                                                           Foreground="{StaticResource TextDim}"
                                                           FontSize="14"
                                                           Text="{Binding BuildDisplayName}"/>

                                                <!-- SERVER -->
                                                <Border Margin="0,22,0,0"
                                                        Style="{StaticResource FieldCardStyle}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="12"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="8"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Text="Сервер"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextStrong}"/>

                                                        <ComboBox Grid.Row="2"
                                                                  ItemsSource="{Binding Servers}"
                                                                  SelectedItem="{Binding SelectedServer}"
                                                                  DisplayMemberPath="Name"/>

                                                        <TextBlock Grid.Row="4"
                                                                   Foreground="{StaticResource TextDim}"
                                                                   FontSize="12"
                                                                   Text="{Binding ServerIp}"/>
                                                    </Grid>
                                                </Border>

                                                <!-- NICK + STATUS/PROGRESS STRIP -->
                                                <Border Margin="0,18,0,0"
                                                        Style="{StaticResource FieldCardStyle}">
                                                    <StackPanel>
                                                        <TextBlock Text="Ник (Minecraft)"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextStrong}"/>

                                                        <TextBox Margin="0,12,0,0"
                                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                                                        <Border Style="{StaticResource StatusStripStyle}">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="10"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <Grid Grid.Row="0">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Text="{Binding StatusText, FallbackValue='Вход выполнен.'}"
                                                                               Foreground="{StaticResource TextDim}"
                                                                               FontSize="12"/>

                                                                    <TextBlock Grid.Column="1"
                                                                               Margin="12,0,0,0"
                                                                               Foreground="{StaticResource TextDim}"
                                                                               FontSize="12"
                                                                               Text="{Binding ProgressPercent, StringFormat={}{0:0}%}"/>
                                                                </Grid>

                                                                <ProgressBar Grid.Row="2"
                                                                             Style="{StaticResource ProgressBarAccurateStyle}"
                                                                             Minimum="0" Maximum="100"
                                                                             Value="{Binding ProgressPercent}"/>
                                                            </Grid>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>

                                            </StackPanel>

                                            <!-- RIGHT -->
                                            <StackPanel Grid.Column="2"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Right"
                                                        Width="320">

                                                <Button Style="{StaticResource PlayOrStopButtonStyle}"
                                                        Click="PlayOrStop_OnClick"
                                                        Height="58"
                                                        FontSize="16"
                                                        Padding="36,0"/>

                                                <Button Style="{StaticResource GhostButton}"
                                                        Content="Проверить сборку"
                                                        Command="{Binding RefreshVersionsCommand}"
                                                        Margin="0,14,0,0"
                                                        Height="44"
                                                        Padding="18,0"/>

                                                <TextBlock Margin="0,14,0,0"
                                                           Foreground="{StaticResource TextDim}"
                                                           FontSize="12"
                                                           HorizontalAlignment="Right">
                                                    Сборка синхронизируется перед запуском.
                                                </TextBlock>

                                            </StackPanel>

                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 2) PROFILE -->
                    <TabItem>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="44" Height="44" CornerRadius="16" ClipToBounds="True" Background="#24324B">
                                            <Grid>
                                                <TextBlock Text="{Binding UserInitial}"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                                <Image Source="{Binding AvatarUrl, IsAsync=True}" Stretch="UniformToFill"/>
                                            </Grid>
                                        </Border>

                                        <StackPanel Margin="12,0,0,0">
                                            <TextBlock Text="{Binding SiteUserName}" FontSize="18" FontWeight="Bold"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Резонит: " Foreground="{StaticResource TextDim}" FontSize="12"/>
                                                <TextBlock Text="{Binding Rezonite, StringFormat={}{0:N0}}" FontWeight="SemiBold" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Style="{StaticResource DangerButton}"
                                                Content="Выйти"
                                                Command="{Binding SiteLogoutCommand}"
                                                Height="36"
                                                Padding="16,0"
                                                Margin="0,0,10,0"/>

                                        <Button Style="{StaticResource WinCtlButton}"
                                                ToolTip="На главную"
                                                Command="{Binding OpenStartCommand}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.05*"/>
                                    <ColumnDefinition Width="14"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Профиль" FontSize="16" FontWeight="Bold"/>

                                        <Border Margin="0,12,0,0"
                                                Background="#101329"
                                                BorderBrush="{StaticResource StrokeGlow}"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Padding="14">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Аккаунт: " Foreground="{StaticResource TextDim}"/>
                                                    <TextBlock Text="{Binding SiteUserName}" FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="Minecraft: " Foreground="{StaticResource TextDim}"/>
                                                    <TextBlock Text="{Binding Username}" FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <TextBlock Margin="0,10,0,0"
                                                           Foreground="{StaticResource TextDim}"
                                                           FontSize="12">
                                                    Данные профиля обновляются с сайта.
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Margin="0,14,0,0"
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="12">
                                            Достижения и расширенный профиль будут добавлены позже.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Баланс развития" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Foreground="{StaticResource TextDim}" FontSize="12">
                                                    Как действия качают характеристики героя
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Top"
                                                       Foreground="{StaticResource TextDim}"
                                                       FontSize="12"
                                                       Text="{Binding WeeklyActionsText, FallbackValue='Действий за неделю: 0'}"/>
                                        </Grid>

                                        <ItemsControl Margin="0,12,0,0" ItemsSource="{Binding ProfileStats}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,8,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="8"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" Foreground="{StaticResource TextDim}" Text="{Binding LevelText, FallbackValue='УР. 0'}"/>

                                                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                                            <Border Background="#26FFFFFF" CornerRadius="6"/>
                                                            <Border Background="{Binding Brush, FallbackValue={StaticResource Accent2}}"
                                                                    CornerRadius="6"
                                                                    RenderTransformOrigin="0,0.5">
                                                                <Border.RenderTransform>
                                                                    <ScaleTransform ScaleX="{Binding Progress, FallbackValue=0}" ScaleY="1"/>
                                                                </Border.RenderTransform>
                                                            </Border>
                                                        </Grid>

                                                        <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                                                                   Margin="0,8,0,0"
                                                                   Foreground="{StaticResource TextDim}"
                                                                   FontSize="11"
                                                                   Text="{Binding Hint, FallbackValue=''}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Margin="0,14,0,0"
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="11">
                                            Наведи на характеристику, чтобы увидеть, от каких действий она растёт.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!-- 3) SETTINGS -->
                    <TabItem>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="14"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Настройки" FontSize="18" FontWeight="Bold"/>

                                        <TextBlock Margin="0,14,0,0" Text="Память (RAM)" FontWeight="SemiBold"/>
                                        <ComboBox ItemsSource="{Binding RamOptions}"
                                                  SelectedItem="{Binding RamMb}"
                                                  Margin="0,10,0,0"
                                                  Height="44"/>

                                        <TextBlock Margin="0,18,0,0" Text="При запуске Minecraft" FontWeight="SemiBold"/>
                                        <StackPanel Margin="0,10,0,0">
                                            <RadioButton GroupName="GameUiMode"
                                                         Content="Скрывать лаунчер пока игра запущена"
                                                         IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GameUiModeHide, Mode=TwoWay}"/>
                                            <RadioButton GroupName="GameUiMode"
                                                         Content="Сворачивать лаунчер пока игра запущена"
                                                         IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GameUiModeMinimize, Mode=TwoWay}"/>
                                            <RadioButton GroupName="GameUiMode"
                                                         Content="Оставлять лаунчер открытым"
                                                         IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GameUiModeNone, Mode=TwoWay}"/>
                                        </StackPanel>

                                        <TextBlock Margin="0,10,0,0"
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="12">
                                            Лаунчер вернётся, когда Minecraft закроется.
                                        </TextBlock>
                                    </StackPanel>

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Button Grid.Row="0"
                                                Style="{StaticResource WinCtlButton}"
                                                HorizontalAlignment="Right"
                                                ToolTip="На главную"
                                                Command="{Binding OpenStartCommand}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                        </Button>

                                        <StackPanel Grid.Row="2">
                                            <Button Style="{StaticResource GhostButton}"
                                                    Content="Проверить обновления лаунчера"
                                                    Command="{Binding CheckLauncherUpdatesCommand}"
                                                    Height="44"
                                                    Padding="18,0"/>

                                            <Button Style="{StaticResource GhostButton}"
                                                    Content="Открыть папку игры"
                                                    Command="{Binding OpenGameDirCommand}"
                                                    Margin="0,14,0,0"
                                                    Height="44"
                                                    Padding="18,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Диагностика" FontWeight="SemiBold"/>

                                    <Expander Grid.Row="1"
                                              Margin="0,12,0,0"
                                              Header="Логи (последние 100)"
                                              IsExpanded="False">

                                        <Border Margin="0,10,0,0"
                                                Background="#101329"
                                                BorderBrush="{StaticResource StrokeGlow}"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Padding="14"
                                                ClipToBounds="True">

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="12"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                                                        <Button Style="{StaticResource GhostButton}"
                                                                Content="Копировать"
                                                                Height="36"
                                                                Padding="16,0"
                                                                Margin="0,0,10,0"
                                                                Click="CopyLogs_OnClick"/>

                                                        <Button Style="{StaticResource GhostButton}"
                                                                Content="Очистить"
                                                                Command="{Binding ClearLogCommand}"
                                                                Height="36"
                                                                Padding="16,0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <ListBox x:Name="LogListBox"
                                                         Grid.Row="2"
                                                         ItemsSource="{Binding LogLines}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{StaticResource TextDim}"
                                                         FontSize="12"
                                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                         ScrollViewer.CanContentScroll="True"
                                                         VirtualizingStackPanel.IsVirtualizing="True"
                                                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                         ItemContainerStyle="{StaticResource LogListItemStyle}">

                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}"
                                                                       TextWrapping="NoWrap"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>

                                            </Grid>
                                        </Border>
                                    </Expander>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>
