                                                    </Grid>

                                                    <ListBox x:Name="LogListBox"
                                                             Grid.Row="2"
                                                             ItemsSource="{Binding LogLines}"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{StaticResource TextDimLocal}"
                                                             FontSize="12"
                                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                             ScrollViewer.CanContentScroll="True"
                                                             VirtualizingStackPanel.IsVirtualizing="True"
                                                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                             ItemContainerStyle="{StaticResource LogListItemStyle}">

                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}"
                                                                           Foreground="{StaticResource TextDimLocal}"
                                                                           TextWrapping="NoWrap"
                                                                           TextTrimming="CharacterEllipsis"/>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>

                                                </Grid>
                                            </Border>
                                        </Expander>
                                    </Grid>

                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 4: NEWS (НЕ ТРОГАЮ) -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource ScreenFrameStyle}">
                                <Grid>
                                    <Image Source="pack://application:,,,/Resources/Assets/legendcraft.jpg"
                                           Stretch="UniformToFill"
                                           Opacity="0.18"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <Rectangle Fill="#B0060718"/>

                                    <Border Padding="26">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="12"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock Text="Новости"
                                                               Foreground="{StaticResource TextStrongLocal}"
                                                               FontSize="22"
                                                               FontWeight="Bold"/>
                                                    <TextBlock Margin="0,4,0,0"
                                                               Foreground="{StaticResource TextDimLocal}"
                                                               FontSize="12"
                                                               Text="Обновления проекта и объявления. Лента подтягивается с сайта."/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                                    <Button Style="{StaticResource GhostButton}"
                                                            Content="Открыть сайт"
                                                            Height="34"
                                                            Padding="14,0"
                                                            Margin="0,0,10,0"
                                                            Click="OpenSite_OnClick"/>
                                                    <Button Style="{StaticResource WinCtlButton}"
                                                            ToolTip="На главную"
                                                            Command="{Binding OpenStartCommand}">
                                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>

                                            <ScrollViewer Grid.Row="2"
                                                          VerticalScrollBarVisibility="Auto"
                                                          HorizontalScrollBarVisibility="Disabled">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="820"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="1">

                                                        <Border Background="#0C000000"
                                                                BorderBrush="{StaticResource StrokeGlow}"
                                                                BorderThickness="1"
                                                                CornerRadius="18"
                                                                Padding="14"
                                                                Margin="0,0,0,14">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <StackPanel>
                                                                    <TextBlock Text="Лента новостей"
                                                                               Foreground="{StaticResource TextStrongLocal}"
                                                                               FontWeight="SemiBold"/>
                                                                    <TextBlock Margin="0,4,0,0"
                                                                               Foreground="{StaticResource TextDimLocal}"
                                                                               FontSize="11"
                                                                               Text="Нажми на карточку, чтобы открыть полную новость в браузере."/>
                                                                </StackPanel>

                                                                <Border Grid.Column="1"
                                                                        Style="{StaticResource NewsTagPillStyle}"
                                                                        VerticalAlignment="Top">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="Источник: "
                                                                                   Foreground="{StaticResource TextDimLocal}"
                                                                                   FontSize="11"/>
                                                                        <TextBlock Text="legendborn.ru"
                                                                                   Foreground="{StaticResource TextStrongLocal}"
                                                                                   FontWeight="SemiBold"
                                                                                   FontSize="11"/>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>
                                                        </Border>

                                                        <ItemsControl>
                                                            <ItemsControl.ItemsSource>
                                                                <PriorityBinding>
                                                                    <Binding Path="ProjectNews"/>
                                                                    <Binding ElementName="RootWindow" Path="ProjectNews"/>
                                                                </PriorityBinding>
                                                            </ItemsControl.ItemsSource>

                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button Style="{StaticResource NewsCardButtonStyle}"
                                                                            Tag="{Binding Url}"
                                                                            Click="OpenNewsItem_OnClick">
                                                                        <Border Style="{StaticResource NewsCardStyle}">
                                                                            <Grid>
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="8"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="10"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                </Grid.RowDefinitions>

                                                                                <Grid Grid.Row="0">
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>

                                                                                    <TextBlock Text="{Binding Title}"
                                                                                               Foreground="{StaticResource TextStrongLocal}"
                                                                                               FontWeight="Bold"
                                                                                               FontSize="14"
                                                                                               TextTrimming="CharacterEllipsis"/>

                                                                                    <Border Grid.Column="1"
                                                                                            Background="#141A2E"
                                                                                            BorderBrush="#2A2F49"
                                                                                            BorderThickness="1"
                                                                                            CornerRadius="999"
                                                                                            Padding="10,4"
                                                                                            VerticalAlignment="Top">
                                                                                        <TextBlock Foreground="{StaticResource TextDimLocal}"
                                                                                                   FontSize="11"
                                                                                                   Text="{Binding Date}"/>
                                                                                    </Border>
                                                                                </Grid>

                                                                                <Border Grid.Row="2"
                                                                                        Background="#0C000000"
                                                                                        BorderBrush="#2A2F49"
                                                                                        BorderThickness="1"
                                                                                        CornerRadius="12"
                                                                                        Padding="10">
                                                                                    <TextBlock Foreground="{StaticResource TextDimLocal}"
                                                                                               FontSize="12"
                                                                                               TextWrapping="Wrap"
                                                                                               TextTrimming="CharacterEllipsis"
                                                                                               MaxHeight="48"
                                                                                               Text="{Binding Summary}"/>
                                                                                </Border>

                                                                                <Grid Grid.Row="4">
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                        <ColumnDefinition Width="8"/>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>

                                                                                    <Border Grid.Column="0"
                                                                                            CornerRadius="10"
                                                                                            Background="#1A203A"
                                                                                            Padding="8,4">
                                                                                        <TextBlock Text="Читать"
                                                                                                   Foreground="{StaticResource TextStrongLocal}"
                                                                                                   FontWeight="SemiBold"
                                                                                                   FontSize="11"/>
                                                                                    </Border>

                                                                                    <TextBlock Grid.Column="3"
                                                                                               Foreground="{StaticResource TextDimLocal}"
                                                                                               FontSize="12"
                                                                                               Text="↗"
                                                                                               VerticalAlignment="Center"/>
                                                                                </Grid>
                                                                            </Grid>
                                                                        </Border>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>

                                                    </StackPanel>
                                                </Grid>
                                            </ScrollViewer>

                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>
