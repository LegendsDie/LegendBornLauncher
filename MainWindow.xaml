<Window x:Class="LegendBorn.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="LegendBorn"
        Icon="pack://application:,,,/Assets/logolauncher.png"
        Width="1100" Height="740"
        MinWidth="920" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#0B0F1A"
        Foreground="#EAF0FF"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="NoResize"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            CornerRadius="16"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/LauncherTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Background (Auth screen) -->
            <ImageBrush x:Key="AuthStartBg"
                        ImageSource="pack://application:,,,/Assets/launcherstart.png"
                        Stretch="UniformToFill"/>

            <!-- Local fallback -->
            <SolidColorBrush x:Key="TextStrongLocal" Color="#EAF0FF"/>
            <SolidColorBrush x:Key="TextDimLocal" Color="#A9B4D6"/>
            <SolidColorBrush x:Key="DividerBrushLocal" Color="#2A2F49"/>

            <!-- Bottom thin progress strip (delayed hide so it doesn't "blink") -->
            <Style x:Key="BottomStripProgressBarStyle"
                   TargetType="ProgressBar"
                   BasedOn="{StaticResource ProgressBarAccurateStyle}">
                <Setter Property="Height" Value="4"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Margin" Value="26,0,26,18"/>
                <Setter Property="IsHitTestVisible" Value="False"/>
                <Setter Property="Opacity" Value="1"/>
                <Style.Triggers>

                    <!-- Hide when ProgressPercent == 0, but with delay + cancellation -->
                    <DataTrigger Binding="{Binding ProgressPercent}" Value="0">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard x:Name="HideStripAtZero">
                                <Storyboard>
                                    <!-- Wait a bit, then fade/collapse -->
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     To="0"
                                                     Duration="0:0:0.25"
                                                     BeginTime="0:0:1.5"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     To="0"
                                                     Duration="0:0:0.20"
                                                     BeginTime="0:0:1.5"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        To="26,0,26,0"
                                                        Duration="0:0:0.20"
                                                        BeginTime="0:0:1.5"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <!-- If progress moved off 0 quickly, cancel scheduled hide -->
                            <StopStoryboard BeginStoryboardName="HideStripAtZero"/>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     To="4"
                                                     Duration="0:0:0.12"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     To="1"
                                                     Duration="0:0:0.12"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        To="26,0,26,18"
                                                        Duration="0:0:0.12"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>

                    <!-- Hide when ProgressPercent == 100, but keep visible longer (no instant disappear) -->
                    <DataTrigger Binding="{Binding ProgressPercent}" Value="100">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard x:Name="HideStripAtHundred">
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     To="0"
                                                     Duration="0:0:0.25"
                                                     BeginTime="0:0:2.0"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     To="0"
                                                     Duration="0:0:0.20"
                                                     BeginTime="0:0:2.0"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        To="26,0,26,0"
                                                        Duration="0:0:0.20"
                                                        BeginTime="0:0:2.0"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <!-- If progress leaves 100 (e.g., next phase), cancel scheduled hide -->
                            <StopStoryboard BeginStoryboardName="HideStripAtHundred"/>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     To="4"
                                                     Duration="0:0:0.12"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     To="1"
                                                     Duration="0:0:0.12"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        To="26,0,26,18"
                                                        Duration="0:0:0.12"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>

                </Style.Triggers>
            </Style>

            <!-- Brand button: no ugly focus / no selection -->
            <Style x:Key="BrandButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12" Background="Transparent">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.95"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Small icon button -->
            <Style x:Key="SmallIconButton" TargetType="Button">
                <Setter Property="Width" Value="38"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Background" Value="#141A2E"/>
                <Setter Property="BorderBrush" Value="{StaticResource StrokeGlow}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{StaticResource TextStrongLocal}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1B2440"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#0E1427"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- News button near profile: match ProfileButton look -->
            <Style x:Key="NewsTopButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfileButton}">
                <Setter Property="Margin" Value="0,0,10,0"/>
                <Setter Property="Padding" Value="12,0"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            </Style>

            <!-- Compact news card button (fixes padding/offset issues) -->
            <Style x:Key="NewsCardButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!-- Root border with adaptive corner radius when Maximized -->
    <Border x:Name="RootBorder">
        <Border.Style>
            <Style TargetType="Border" BasedOn="{StaticResource RootBorderStyle}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="Maximized">
                        <Setter Property="CornerRadius" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>

            <!-- BACKGROUND -->
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#060718" Offset="0"/>
                            <GradientStop Color="#0B0F1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Ellipse Width="560" Height="560" Opacity="0.10" HorizontalAlignment="Left" Margin="-180,-180,0,0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#A855F7" Offset="0"/>
                            <GradientStop Color="#00A855F7" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Ellipse Width="640" Height="640" Opacity="0.08" HorizontalAlignment="Right" Margin="0,-240,-240,0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#7C3AED" Offset="0"/>
                            <GradientStop Color="#007C3AED" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>

            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOP BAR -->
                <Border Grid.Row="0" Style="{StaticResource TopBarStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: brand -->
                        <Button Grid.Column="0"
                                Style="{StaticResource BrandButtonStyle}"
                                ToolTip="Главная"
                                Command="{Binding OpenStartCommand}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Width="34" Height="34" CornerRadius="12" Background="#22FFFFFF" VerticalAlignment="Center">
                                    <Image Source="pack://application:,,,/Assets/logolauncher.png"
                                           Stretch="Uniform"
                                           Margin="5"/>
                                </Border>

                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="LEGENDBORN"
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               Foreground="{StaticResource TextStrongLocal}"/>
                                    <StackPanel Orientation="Horizontal" Opacity="0.80">
                                        <TextBlock Text="Launcher"
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="11"/>
                                        <TextBlock Text="  •  "
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="11"/>
                                        <TextBlock Text="{Binding LauncherVersion}"
                                                   Foreground="{StaticResource TextDim}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- DRAG AREA -->
                        <Border Grid.Column="1"
                                Background="Transparent"
                                MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown"/>

                        <!-- RIGHT -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                            <!-- NEWS button (profile-like) -->
                            <Button Style="{StaticResource NewsTopButtonStyle}"
                                    ToolTip="Новости"
                                    Click="OpenNewsTab_OnClick">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                        <Canvas Width="16" Height="16">
                                            <Rectangle Width="14" Height="14" Canvas.Left="1" Canvas.Top="1"
                                                       RadiusX="2" RadiusY="2"
                                                       Stroke="{StaticResource TextDimLocal}" StrokeThickness="1"
                                                       Opacity="0.9"/>
                                            <Rectangle Width="4" Height="5" Canvas.Left="3" Canvas.Top="4"
                                                       Stroke="{StaticResource TextDimLocal}" StrokeThickness="1"
                                                       Opacity="0.9"/>
                                            <Line X1="8" Y1="5" X2="13" Y2="5"
                                                  Stroke="{StaticResource TextDimLocal}" StrokeThickness="1"
                                                  Opacity="0.9"/>
                                            <Line X1="8" Y1="7" X2="13" Y2="7"
                                                  Stroke="{StaticResource TextDimLocal}" StrokeThickness="1"
                                                  Opacity="0.9"/>
                                            <Line X1="3" Y1="11" X2="13" Y2="11"
                                                  Stroke="{StaticResource TextDimLocal}" StrokeThickness="1"
                                                  Opacity="0.9"/>
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock Text="Новости"
                                               Foreground="{StaticResource TextStrongLocal}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Profile -->
                            <Button Style="{StaticResource ProfileButton}"
                                    Margin="0,0,10,0"
                                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVis}}"
                                    Command="{Binding OpenProfileCommand}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="24" Height="24" CornerRadius="10" ClipToBounds="True" Background="#24324B">
                                        <Grid>
                                            <TextBlock Text="{Binding UserInitial}"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextStrongLocal}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            <Image Source="{Binding AvatarUrl, IsAsync=True}" Stretch="UniformToFill"/>
                                        </Grid>
                                    </Border>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SiteUserName}"
                                               Foreground="{StaticResource TextStrongLocal}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="3"
                                               Margin="8,0,0,0"
                                               Foreground="{StaticResource TextDim}"
                                               Text="▾"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <Button.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="{Binding Rezonite, StringFormat=Резонит: {0:N0}}"
                                                  IsEnabled="False"/>
                                        <Separator/>
                                        <MenuItem Header="Профиль" Command="{Binding OpenProfileCommand}"/>
                                        <Separator/>
                                        <MenuItem Header="Выйти" Command="{Binding SiteLogoutCommand}"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                            <Button Style="{StaticResource WinCtlButton}"
                                    ToolTip="Настройки"
                                    Command="{Binding OpenSettingsCommand}">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="14"/>
                            </Button>

                            <Button Style="{StaticResource WinCtlButton}"
                                    ToolTip="Свернуть"
                                    Click="Minimize_OnClick">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE921;" FontSize="14"/>
                            </Button>

                            <Button Style="{StaticResource WinCtlButton}"
                                    ToolTip="Закрыть"
                                    Click="Close_OnClick">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="14"/>
                            </Button>

                        </StackPanel>
                    </Grid>
                </Border>

                <!-- CONTENT -->
                <TabControl x:Name="MainTabs"
                            Grid.Row="2"
                            Style="{StaticResource HiddenTabsStyle}"
                            SelectedIndex="{Binding SelectedMenuIndex}">

                    <!-- 0) AUTH -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource ScreenFrameStyle}">
                                <Grid>
                                    <Rectangle Fill="{StaticResource AuthStartBg}"/>

                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#45060718" Offset="0"/>
                                                <GradientStop Color="#B0060718" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Width="520">

                                            <TextBlock Text="Добро пожаловать"
                                                       FontSize="26"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextStrongLocal}"
                                                       HorizontalAlignment="Center"/>

                                            <TextBlock Margin="0,10,0,0"
                                                       Foreground="{StaticResource TextDimLocal}"
                                                       FontSize="13"
                                                       TextAlignment="Center">
                                                Авторизация выполняется через сайт.
                                            </TextBlock>

                                            <Button Style="{StaticResource PrimaryButton}"
                                                    Content="{Binding LoginButtonText}"
                                                    Command="{Binding LoginViaSiteCommand}"
                                                    Margin="0,18,0,0"
                                                    Height="52"
                                                    FontSize="15"
                                                    Padding="26,0"/>

                                            <Border Margin="0,14,0,0"
                                                    Background="#7A0F172A"
                                                    BorderBrush="{StaticResource StrokeGlow}"
                                                    BorderThickness="1"
                                                    CornerRadius="16"
                                                    Padding="16"
                                                    Visibility="{Binding IsWaitingSiteConfirm, Converter={StaticResource BoolToVis}}">
                                                <StackPanel>
                                                    <TextBlock Text="Подтверди вход на сайте"
                                                               Foreground="{StaticResource TextStrongLocal}"
                                                               FontWeight="SemiBold"/>

                                                    <TextBlock Margin="0,8,0,0"
                                                               Foreground="{StaticResource TextDimLocal}"
                                                               FontSize="12">
                                                        Статус: <Run Text="{Binding StatusText}"/>
                                                    </TextBlock>

                                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                        <Button Style="{StaticResource GhostButton}"
                                                                Content="Скопировать ссылку"
                                                                Height="42"
                                                                Padding="18,0"
                                                                Click="CopyOrRegenLoginLink_OnClick"/>

                                                        <Button Style="{StaticResource DangerButton}"
                                                                Content="Отменить"
                                                                Command="{Binding SiteLogoutCommand}"
                                                                Margin="12,0,0,0"
                                                                Height="42"
                                                                Padding="18,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                        </StackPanel>

                                        <TextBlock Grid.Row="1"
                                                   Margin="0,0,0,14"
                                                   Foreground="{StaticResource TextDimLocal}"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center">
                                            <Run Text="{Binding StatusText}"/>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 1) START -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource ScreenFrameStyle}">
                                <Grid>
                                    <Image Source="pack://application:,,,/Assets/legendcraft.jpg"
                                           Stretch="UniformToFill"
                                           Opacity="0.42"/>

                                    <Rectangle Fill="#9A060718"/>

                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#E0121228" Offset="0"/>
                                                <GradientStop Color="#84121228" Offset="0.55"/>
                                                <GradientStop Color="#B0060718" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <!-- subtle official mark (top-right) -->
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE73E;"
                                               FontSize="16"
                                               Foreground="{StaticResource TextDimLocal}"
                                               Opacity="0.18"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,12,14,0"
                                               ToolTip="Официальный сервер"/>

                                    <!-- Padding bottom reserved for thin progress strip -->
                                    <Border Background="#00000000" Padding="26,26,26,44">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.55*"/>
                                                    <ColumnDefinition Width="26"/>
                                                    <ColumnDefinition Width="340"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- LEFT -->
                                                <StackPanel Grid.Column="0"
                                                            VerticalAlignment="Top"
                                                            Margin="0,12,0,0">

                                                    <!-- Server header: bigger logo + one-line description -->
                                                    <StackPanel Margin="0,0,0,14">
                                                        <Image Source="pack://application:,,,/Assets/legendcraft.png"
                                                               Height="200"
                                                               Stretch="Uniform"
                                                               HorizontalAlignment="Center"
                                                               SnapsToDevicePixels="True"
                                                               RenderOptions.BitmapScalingMode="HighQuality">
                                                            <Image.Effect>
                                                                <DropShadowEffect Color="#A855F7"
                                                                                  BlurRadius="22"
                                                                                  ShadowDepth="0"
                                                                                  Opacity="0.35"/>
                                                            </Image.Effect>
                                                        </Image>

                                                        <TextBlock Margin="0,10,0,0"
                                                                   Text="TechMagicRPG сервер, где начнётся твой путь"
                                                                   Foreground="{StaticResource TextDimLocal}"
                                                                   FontSize="13"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>

                                                    <!-- NICK -->
                                                    <Border Style="{StaticResource FieldCardStyle}">
                                                        <StackPanel>
                                                            <TextBlock Text="Ник (Minecraft)"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource TextStrongLocal}"/>

                                                            <TextBox Margin="0,12,0,0"
                                                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                                                            <!-- Compact status text (no percent here) -->
                                                            <TextBlock Margin="0,10,0,0"
                                                                       Text="{Binding StatusText, FallbackValue='Готов к запуску.'}"
                                                                       Foreground="{StaticResource TextDimLocal}"
                                                                       FontSize="12"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- SERVER NEWS (compact, TOP 2) -->
                                                    <Border Margin="0,16,0,0"
                                                            Style="{StaticResource FieldCardStyle}">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="10"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>

                                                            <Grid Grid.Row="0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="Новости сервера"
                                                                           FontWeight="Bold"
                                                                           Foreground="{StaticResource TextStrongLocal}"
                                                                           FontSize="13"/>

                                                                <Button Grid.Column="1"
                                                                        Style="{StaticResource GhostButton}"
                                                                        Content="Все"
                                                                        Height="30"
                                                                        Padding="12,0"
                                                                        Click="OpenNewsTab_OnClick"/>
                                                            </Grid>

                                                            <ItemsControl Grid.Row="2"
                                                                          ItemsSource="{Binding ElementName=RootWindow, Path=ServerNewsTop2}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>

                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Style="{StaticResource NewsCardButtonStyle}"
                                                                                Tag="{Binding Url}"
                                                                                Click="OpenNewsItem_OnClick">
                                                                            <Border Background="#101329"
                                                                                    BorderBrush="{StaticResource StrokeGlow}"
                                                                                    BorderThickness="1"
                                                                                    CornerRadius="14"
                                                                                    Padding="12">
                                                                                <Grid>
                                                                                    <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="Auto"/>
                                                                                        <RowDefinition Height="6"/>
                                                                                        <RowDefinition Height="Auto"/>
                                                                                    </Grid.RowDefinitions>

                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <TextBlock Text="{Binding Title}"
                                                                                                   Foreground="{StaticResource TextStrongLocal}"
                                                                                                   FontWeight="SemiBold"
                                                                                                   FontSize="12"
                                                                                                   TextTrimming="CharacterEllipsis"/>
                                                                                        <TextBlock Grid.Column="1"
                                                                                                   Margin="12,0,0,0"
                                                                                                   Foreground="{StaticResource TextDimLocal}"
                                                                                                   FontSize="11"
                                                                                                   Text="{Binding Date}"/>
                                                                                    </Grid>

                                                                                    <TextBlock Grid.Row="2"
                                                                                               Foreground="{StaticResource TextDimLocal}"
                                                                                               FontSize="12"
                                                                                               TextWrapping="NoWrap"
                                                                                               TextTrimming="CharacterEllipsis"
                                                                                               Text="{Binding Summary}"/>
                                                                                </Grid>
                                                                            </Border>
                                                                        </Button>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Grid>
                                                    </Border>

                                                </StackPanel>

                                                <!-- RIGHT -->
                                                <Grid Grid.Column="2">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- ACTIONS pinned bottom-right -->
                                                    <StackPanel Grid.Row="1"
                                                                VerticalAlignment="Bottom"
                                                                HorizontalAlignment="Right">

                                                        <!-- small icon row (ABOVE PLAY) -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Right"
                                                                    Margin="0,0,0,10">

                                                            <!-- Open game folder -->
                                                            <Button Style="{StaticResource SmallIconButton}"
                                                                    ToolTip="Открыть папку игры"
                                                                    Command="{Binding OpenGameDirCommand}">
                                                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                                                           Text="&#xE8B7;"
                                                                           FontSize="16"/>
                                                            </Button>

                                                            <!-- Open site -->
                                                            <Button Style="{StaticResource SmallIconButton}"
                                                                    ToolTip="Открыть сайт"
                                                                    Margin="10,0,0,0"
                                                                    Click="OpenSite_OnClick">
                                                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                                                           Text="&#xE774;"
                                                                           FontSize="16"/>
                                                            </Button>
                                                        </StackPanel>

                                                        <Button Style="{StaticResource PlayOrStopButtonStyle}"
                                                                Click="PlayOrStop_OnClick"
                                                                Height="58"
                                                                FontSize="16"
                                                                Padding="36,0"/>

                                                        <TextBlock Margin="0,14,0,0"
                                                                   Foreground="{StaticResource TextDimLocal}"
                                                                   FontSize="12"
                                                                   HorizontalAlignment="Right">
                                                            Сборка синхронизируется перед запуском.
                                                        </TextBlock>

                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </ScrollViewer>
                                    </Border>

                                    <!-- Single thin strip at the bottom -->
                                    <ProgressBar Style="{StaticResource BottomStripProgressBarStyle}"
                                                 Minimum="0" Maximum="100"
                                                 Value="{Binding ProgressPercent}"/>

                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 2) PROFILE (без изменений) -->
                    <TabItem>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="44" Height="44" CornerRadius="16" ClipToBounds="True" Background="#24324B">
                                            <Grid>
                                                <TextBlock Text="{Binding UserInitial}"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           Foreground="{StaticResource TextStrongLocal}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                                <Image Source="{Binding AvatarUrl, IsAsync=True}" Stretch="UniformToFill"/>
                                            </Grid>
                                        </Border>

                                        <StackPanel Margin="12,0,0,0">
                                            <TextBlock Text="{Binding SiteUserName}"
                                                       Foreground="{StaticResource TextStrongLocal}"
                                                       FontSize="18"
                                                       FontWeight="Bold"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Резонит: "
                                                           Foreground="{StaticResource TextDimLocal}"
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding Rezonite, StringFormat={}{0:N0}}"
                                                           Foreground="{StaticResource TextStrongLocal}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Style="{StaticResource DangerButton}"
                                                Content="Выйти"
                                                Command="{Binding SiteLogoutCommand}"
                                                Height="36"
                                                Padding="16,0"
                                                Margin="0,0,10,0"/>

                                        <Button Style="{StaticResource WinCtlButton}"
                                                ToolTip="На главную"
                                                Command="{Binding OpenStartCommand}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.05*"/>
                                    <ColumnDefinition Width="14"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Профиль"
                                                   Foreground="{StaticResource TextStrongLocal}"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>

                                        <Border Margin="0,12,0,0"
                                                Background="#101329"
                                                BorderBrush="{StaticResource StrokeGlow}"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Padding="14">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Аккаунт: "
                                                               Foreground="{StaticResource TextDimLocal}"/>
                                                    <TextBlock Text="{Binding SiteUserName}"
                                                               Foreground="{StaticResource TextStrongLocal}"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="Minecraft: "
                                                               Foreground="{StaticResource TextDimLocal}"/>
                                                    <TextBlock Text="{Binding Username}"
                                                               Foreground="{StaticResource TextStrongLocal}"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <TextBlock Margin="0,10,0,0"
                                                           Foreground="{StaticResource TextDimLocal}"
                                                           FontSize="12">
                                                    Данные профиля обновляются с сайта.
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Margin="0,14,0,0"
                                                   Foreground="{StaticResource TextDimLocal}"
                                                   FontSize="12">
                                            Достижения и расширенный профиль будут добавлены позже.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Баланс развития"
                                                           Foreground="{StaticResource TextStrongLocal}"
                                                           FontWeight="Bold"
                                                           FontSize="14"/>
                                                <TextBlock Foreground="{StaticResource TextDimLocal}" FontSize="12">
                                                    Как действия качают характеристики героя
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Top"
                                                       Foreground="{StaticResource TextDimLocal}"
                                                       FontSize="12"
                                                       Text="{Binding WeeklyActionsText, FallbackValue='Действий за неделю: 0'}"/>
                                        </Grid>

                                        <ItemsControl Margin="0,12,0,0" ItemsSource="{Binding ProfileStats}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,8,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="8"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding Name}"
                                                                   Foreground="{StaticResource TextStrongLocal}"
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Foreground="{StaticResource TextDimLocal}"
                                                                   Text="{Binding LevelText, FallbackValue='УР. 0'}"/>

                                                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                                            <Border Background="#26FFFFFF" CornerRadius="6"/>
                                                            <Border Background="{Binding Brush, FallbackValue={StaticResource Accent2}}"
                                                                    CornerRadius="6"
                                                                    RenderTransformOrigin="0,0.5">
                                                                <Border.RenderTransform>
                                                                    <ScaleTransform ScaleX="{Binding Progress, FallbackValue=0}" ScaleY="1"/>
                                                                </Border.RenderTransform>
                                                            </Border>
                                                        </Grid>

                                                        <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                                                                   Margin="0,8,0,0"
                                                                   Foreground="{StaticResource TextDimLocal}"
                                                                   FontSize="11"
                                                                   Text="{Binding Hint, FallbackValue=''}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Margin="0,14,0,0"
                                                   Foreground="{StaticResource TextDimLocal}"
                                                   FontSize="11">
                                            Наведи на характеристику, чтобы увидеть, от каких действий она растёт.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!-- 3) SETTINGS (без изменений) -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Настройки"
                                                   Foreground="{StaticResource TextStrongLocal}"
                                                   FontSize="18"
                                                   FontWeight="Bold"/>

                                        <Button Grid.Column="1"
                                                Style="{StaticResource WinCtlButton}"
                                                HorizontalAlignment="Right"
                                                ToolTip="На главную"
                                                Command="{Binding OpenStartCommand}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Row="1" Margin="0,14,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.25*"/>
                                            <ColumnDefinition Width="18"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Память (RAM)"
                                                       Foreground="{StaticResource TextStrongLocal}"
                                                       FontWeight="SemiBold"/>
                                            <ComboBox ItemsSource="{Binding RamOptions}"
                                                      SelectedItem="{Binding RamMb}"
                                                      Margin="0,10,0,0"
                                                      Height="44"/>

                                            <TextBlock Margin="0,18,0,0"
                                                       Text="При запуске Minecraft"
                                                       Foreground="{StaticResource TextStrongLocal}"
                                                       FontWeight="SemiBold"/>

                                            <StackPanel Margin="0,10,0,0">
                                                <RadioButton GroupName="GameUiMode"
                                                             Foreground="{StaticResource TextStrongLocal}"
                                                             Content="Скрывать лаунчер пока игра запущена"
                                                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GameUiModeHide, Mode=TwoWay}"/>
                                                <RadioButton GroupName="GameUiMode"
                                                             Foreground="{StaticResource TextStrongLocal}"
                                                             Content="Сворачивать лаунчер пока игра запущена"
                                                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GameUiModeMinimize, Mode=TwoWay}"/>
                                                <RadioButton GroupName="GameUiMode"
                                                             Foreground="{StaticResource TextStrongLocal}"
                                                             Content="Оставлять лаунчер открытым"
                                                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GameUiModeNone, Mode=TwoWay}"/>
                                            </StackPanel>

                                            <TextBlock Margin="0,10,0,0"
                                                       Foreground="{StaticResource TextDimLocal}"
                                                       FontSize="12">
                                                Лаунчер вернётся, когда Minecraft закроется.
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Top">
                                            <Button Style="{StaticResource GhostButton}"
                                                    Content="Проверить обновления лаунчера"
                                                    Command="{Binding CheckLauncherUpdatesCommand}"
                                                    Height="44"
                                                    Padding="18,0"/>

                                            <Button Style="{StaticResource GhostButton}"
                                                    Content="Проверить сборку"
                                                    Command="{Binding RefreshVersionsCommand}"
                                                    Margin="0,14,0,0"
                                                    Height="44"
                                                    Padding="18,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <Border Grid.Row="2"
                                            Margin="0,18,0,18"
                                            Height="1"
                                            Background="{StaticResource DividerBrushLocal}"
                                            Opacity="0.9"/>

                                    <Grid Grid.Row="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="Диагностика"
                                                   Foreground="{StaticResource TextStrongLocal}"
                                                   FontWeight="SemiBold"/>

                                        <Expander Grid.Row="1"
                                                  Margin="0,12,0,0"
                                                  Foreground="{StaticResource TextStrongLocal}"
                                                  Header="Логи (последние 100)"
                                                  IsExpanded="False">

                                            <Border Margin="0,10,0,0"
                                                    Background="#101329"
                                                    BorderBrush="{StaticResource StrokeGlow}"
                                                    BorderThickness="1"
                                                    CornerRadius="14"
                                                    Padding="14"
                                                    ClipToBounds="True">

                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="12"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                                                            <Button Style="{StaticResource GhostButton}"
                                                                    Content="Копировать"
                                                                    Height="36"
                                                                    Padding="16,0"
                                                                    Margin="0,0,10,0"
                                                                    Click="CopyLogs_OnClick"/>

                                                            <Button Style="{StaticResource GhostButton}"
                                                                    Content="Очистить"
                                                                    Command="{Binding ClearLogCommand}"
                                                                    Height="36"
                                                                    Padding="16,0"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <ListBox x:Name="LogListBox"
                                                             Grid.Row="2"
                                                             ItemsSource="{Binding LogLines}"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{StaticResource TextDimLocal}"
                                                             FontSize="12"
                                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                             ScrollViewer.CanContentScroll="True"
                                                             VirtualizingStackPanel.IsVirtualizing="True"
                                                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                             ItemContainerStyle="{StaticResource LogListItemStyle}">

                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}"
                                                                           Foreground="{StaticResource TextDimLocal}"
                                                                           TextWrapping="NoWrap"
                                                                           TextTrimming="CharacterEllipsis"/>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>

                                                </Grid>
                                            </Border>
                                        </Expander>
                                    </Grid>

                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 4) NEWS (compact, not stretched) -->
                    <TabItem>
                        <Grid>
                            <Border Style="{StaticResource ScreenFrameStyle}">
                                <Grid>
                                    <Image Source="pack://application:,,,/Assets/legendcraft.jpg"
                                           Stretch="UniformToFill"
                                           Opacity="0.18"/>
                                    <Rectangle Fill="#B0060718"/>

                                    <Border Padding="26">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="12"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock Text="Новости"
                                                               Foreground="{StaticResource TextStrongLocal}"
                                                               FontSize="22"
                                                               FontWeight="Bold"/>
                                                    <TextBlock Margin="0,4,0,0"
                                                               Foreground="{StaticResource TextDimLocal}"
                                                               FontSize="12"
                                                               Text="Обновления проекта и объявления сервера."/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                                    <Button Style="{StaticResource GhostButton}"
                                                            Content="Открыть сайт"
                                                            Height="34"
                                                            Padding="14,0"
                                                            Margin="0,0,10,0"
                                                            Click="OpenSite_OnClick"/>
                                                    <Button Style="{StaticResource WinCtlButton}"
                                                            ToolTip="На главную"
                                                            Command="{Binding OpenStartCommand}">
                                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Body -->
                                            <ScrollViewer Grid.Row="2"
                                                          VerticalScrollBarVisibility="Auto"
                                                          HorizontalScrollBarVisibility="Disabled">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="820"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="1">

                                                        <ItemsControl ItemsSource="{Binding ElementName=RootWindow, Path=ProjectNews}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button Style="{StaticResource NewsCardButtonStyle}"
                                                                            Tag="{Binding Url}"
                                                                            Click="OpenNewsItem_OnClick">
                                                                        <Border Background="#101329"
                                                                                BorderBrush="{StaticResource StrokeGlow}"
                                                                                BorderThickness="1"
                                                                                CornerRadius="16"
                                                                                Padding="14">
                                                                            <Grid>
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="6"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                </Grid.RowDefinitions>

                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>

                                                                                    <TextBlock Text="{Binding Title}"
                                                                                               Foreground="{StaticResource TextStrongLocal}"
                                                                                               FontWeight="Bold"
                                                                                               FontSize="14"
                                                                                               TextTrimming="CharacterEllipsis"/>
                                                                                    <TextBlock Grid.Column="1"
                                                                                               Margin="12,0,0,0"
                                                                                               Foreground="{StaticResource TextDimLocal}"
                                                                                               FontSize="12"
                                                                                               Text="{Binding Date}"/>
                                                                                </Grid>

                                                                                <TextBlock Grid.Row="2"
                                                                                           Foreground="{StaticResource TextDimLocal}"
                                                                                           FontSize="12"
                                                                                           TextWrapping="Wrap"
                                                                                           Text="{Binding Summary}"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>

                                                    </StackPanel>
                                                </Grid>
                                            </ScrollViewer>

                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>
