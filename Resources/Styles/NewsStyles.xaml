<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Карточка новости (News tab) -->
    <Style x:Key="NewsCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#101329"/>
        <Setter Property="BorderBrush" Value="{StaticResource StrokeGlow}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Пилюля-тег (дата, источник и т.д.) -->
    <Style x:Key="NewsTagPillStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="999"/>
        <Setter Property="Background" Value="#1F243D"/>
        <Setter Property="BorderBrush" Value="#2A2F49"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,4"/>
    </Style>

    <!-- Верхняя кнопка "Новости" в TopBar -->
    <Style x:Key="NewsTopButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfileButton}">
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <!-- Кнопка-обёртка для карточки новости (чтобы вся карточка кликабельна) -->
    <Style x:Key="NewsCardButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
