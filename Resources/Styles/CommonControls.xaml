<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Локальные базовые кисти (используются в окне/вкладках) -->
    <SolidColorBrush x:Key="TextStrongLocal" Color="#EAF0FF"/>
    <SolidColorBrush x:Key="TextDimLocal" Color="#A9B4D6"/>
    <SolidColorBrush x:Key="DividerBrushLocal" Color="#2A2F49"/>

    <!-- Фон авторизации -->
    <ImageBrush x:Key="AuthStartBg"
                ImageSource="pack://application:,,,/Resources/Assets/launcherstart.png"
                Stretch="UniformToFill"/>

    <!-- Нижняя полоска прогресса (Start tab) -->
    <Style x:Key="BottomStripProgressBarStyle"
           TargetType="ProgressBar"
           BasedOn="{StaticResource ProgressBarAccurateStyle}">
        <Setter Property="Height" Value="4"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="26,0,26,18"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Opacity" Value="1"/>
        <Style.Triggers>

            <DataTrigger Binding="{Binding ProgressPercent}" Value="0">
                <DataTrigger.EnterActions>
                    <BeginStoryboard x:Name="HideStripAtZero">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="0"
                                             Duration="0:0:0.25"
                                             BeginTime="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height"
                                             To="0"
                                             Duration="0:0:0.20"
                                             BeginTime="0:0:1.5"/>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                To="26,0,26,0"
                                                Duration="0:0:0.20"
                                                BeginTime="0:0:1.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="HideStripAtZero"/>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Height"
                                             To="4"
                                             Duration="0:0:0.12"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="1"
                                             Duration="0:0:0.12"/>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                To="26,0,26,18"
                                                Duration="0:0:0.12"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
            </DataTrigger>

            <DataTrigger Binding="{Binding ProgressPercent}" Value="100">
                <DataTrigger.EnterActions>
                    <BeginStoryboard x:Name="HideStripAtHundred">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="0"
                                             Duration="0:0:0.25"
                                             BeginTime="0:0:2.0"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height"
                                             To="0"
                                             Duration="0:0:0.20"
                                             BeginTime="0:0:2.0"/>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                To="26,0,26,0"
                                                Duration="0:0:0.20"
                                                BeginTime="0:0:2.0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="HideStripAtHundred"/>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Height"
                                             To="4"
                                             Duration="0:0:0.12"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="1"
                                             Duration="0:0:0.12"/>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                To="26,0,26,18"
                                                Duration="0:0:0.12"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
            </DataTrigger>

        </Style.Triggers>
    </Style>

    <!-- Кнопка бренда в TopBar -->
    <Style x:Key="BrandButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="12" Background="Transparent">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.95"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.85"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Маленькие квадратные икон-кнопки справа (папка/сайт и т.п.) -->
    <Style x:Key="SmallIconButton" TargetType="Button">
        <Setter Property="Width" Value="38"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="#141A2E"/>
        <Setter Property="BorderBrush" Value="{StaticResource StrokeGlow}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource TextStrongLocal}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="12"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1B2440"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#0E1427"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
