<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Мягкое свечение в аватарке -->
    <LinearGradientBrush x:Key="SoftCardGlowBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A7C3AED" Offset="0"/>
        <GradientStop Color="#007C3AED" Offset="1"/>
    </LinearGradientBrush>

    <!-- Заголовок секции -->
    <Style x:Key="SectionHeaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextStrongLocal}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Подзаголовок/описание -->
    <Style x:Key="SectionSubText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextDimLocal}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Внутренняя карточка (аккаунт/клан/друзья блоки слева) -->
    <Style x:Key="InnerCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#101329"/>
        <Setter Property="BorderBrush" Value="{StaticResource StrokeGlow}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Header профиля (верхняя панель профиля) -->
    <Style x:Key="ProfileHeaderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="BorderBrush" Value="{StaticResource StrokeGlow}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#121735" Offset="0"/>
                    <GradientStop Color="#0E122B" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
