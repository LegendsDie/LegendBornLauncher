<UserControl x:Class="LegendBorn.Views.Tabs.StartTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="640"
             d:DesignWidth="980">

    <Grid>
        <Border Style="{StaticResource ScreenFrameStyle}">
            <Grid>

                <Image Source="pack://application:,,,/Resources/Assets/legendcraft.jpg"
                       Stretch="UniformToFill"
                       Opacity="0.42"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <Rectangle Fill="#9A060718"/>

                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E0121228" Offset="0"/>
                            <GradientStop Color="#84121228" Offset="0.55"/>
                            <GradientStop Color="#B0060718" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <TextBlock FontFamily="Segoe MDL2 Assets"
                           Text="&#xE73E;"
                           FontSize="16"
                           Foreground="{StaticResource TextDimLocal}"
                           Opacity="0.18"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,12,14,0"
                           ToolTip="Официальный сервер"/>

                <Border Background="#00000000" Padding="26,26,26,44">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.55*"/>
                                <ColumnDefinition Width="26"/>
                                <ColumnDefinition Width="340"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left column -->
                            <StackPanel Grid.Column="0"
                                        VerticalAlignment="Top"
                                        Margin="0,12,0,0">

                                <StackPanel Margin="0,0,0,14">
                                    <TextBlock Text="{Binding PackName}"
                                               Foreground="{StaticResource TextStrongLocal}"
                                               FontSize="26"
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Margin="0,6,0,0"
                                               Text="{Binding BuildDisplayName}"
                                               Foreground="{StaticResource TextDimLocal}"
                                               FontSize="13"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Margin="0,8,0,0"
                                               Text="TechMagicRPG сервер, где начнётся твой путь"
                                               Foreground="{StaticResource TextDimLocal}"
                                               FontSize="12"
                                               Opacity="0.92"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <Border Style="{StaticResource FieldCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Ник (Minecraft)"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextStrongLocal}"/>

                                        <TextBox Margin="0,12,0,0"
                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Margin="0,10,0,0"
                                                   Text="{Binding StatusText, FallbackValue='Готов к запуску.'}"
                                                   Foreground="{StaticResource TextDimLocal}"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Border>

                                <Border Margin="0,16,0,0"
                                        Style="{StaticResource FieldCardStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Новости сервера"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextStrongLocal}"
                                                       FontSize="13"/>

                                            <!-- IMPORTANT: handler must exist in StartTabView.xaml.cs -->
                                            <Button Grid.Column="1"
                                                    Style="{StaticResource GhostButton}"
                                                    Content="Все"
                                                    Height="30"
                                                    Padding="12,0"
                                                    Click="OpenNewsTab_OnClick"/>
                                        </Grid>

                                        <ItemsControl Grid.Row="2">
                                            <ItemsControl.ItemsSource>
                                                <PriorityBinding>
                                                    <Binding Path="ServerNewsTop2"/>
                                                    <!-- fallback to RootWindow property if you keep it there -->
                                                    <Binding ElementName="RootWindow" Path="ServerNewsTop2"/>
                                                </PriorityBinding>
                                            </ItemsControl.ItemsSource>

                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <!-- IMPORTANT: handler must exist in StartTabView.xaml.cs -->
                                                    <Button Style="{StaticResource NewsCardButtonStyle}"
                                                            Tag="{Binding Url}"
                                                            Click="OpenNewsItem_OnClick">
                                                        <Border Background="#101329"
                                                                BorderBrush="{StaticResource StrokeGlow}"
                                                                BorderThickness="1"
                                                                CornerRadius="14"
                                                                Padding="12">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="6"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Text="{Binding Title}"
                                                                               Foreground="{StaticResource TextStrongLocal}"
                                                                               FontWeight="SemiBold"
                                                                               FontSize="12"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Grid.Column="1"
                                                                               Margin="12,0,0,0"
                                                                               Foreground="{StaticResource TextDimLocal}"
                                                                               FontSize="11"
                                                                               Text="{Binding Date}"/>
                                                                </Grid>

                                                                <TextBlock Grid.Row="2"
                                                                           Foreground="{StaticResource TextDimLocal}"
                                                                           FontSize="12"
                                                                           TextWrapping="NoWrap"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           Text="{Binding Summary}"/>
                                                            </Grid>
                                                        </Border>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>

                            </StackPanel>

                            <!-- Right column -->
                            <Grid Grid.Column="2" Margin="0,12,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0"
                                       Source="pack://application:,,,/Resources/Assets/legendcraft.png"
                                       Height="170"
                                       MaxWidth="320"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,14"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Effect>
                                        <DropShadowEffect Color="#A855F7"
                                                          BlurRadius="22"
                                                          ShadowDepth="0"
                                                          Opacity="0.28"/>
                                    </Image.Effect>
                                </Image>

                                <StackPanel Grid.Row="2"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,0,0">

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,0,10">

                                        <Button Style="{StaticResource SmallIconButton}"
                                                ToolTip="Открыть папку игры"
                                                Command="{Binding OpenGameDirCommand}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE8B7;"
                                                       FontSize="16"/>
                                        </Button>

                                        <!-- IMPORTANT: handler must exist in StartTabView.xaml.cs -->
                                        <Button Style="{StaticResource SmallIconButton}"
                                                ToolTip="Открыть сайт"
                                                Margin="10,0,0,0"
                                                Click="OpenSite_OnClick">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE774;"
                                                       FontSize="16"/>
                                        </Button>
                                    </StackPanel>

                                    <!-- IMPORTANT: handler must exist in StartTabView.xaml.cs -->
                                    <Button Style="{StaticResource PlayOrStopButtonStyle}"
                                            Click="PlayOrStop_OnClick"
                                            Height="58"
                                            FontSize="16"
                                            Padding="36,0"/>

                                    <TextBlock Margin="0,14,0,0"
                                               Foreground="{StaticResource TextDimLocal}"
                                               FontSize="12"
                                               HorizontalAlignment="Right">
                                        Сборка синхронизируется перед запуском.
                                    </TextBlock>

                                </StackPanel>
                            </Grid>

                        </Grid>
                    </ScrollViewer>
                </Border>

                <ProgressBar Style="{StaticResource BottomStripProgressBarStyle}"
                             Minimum="0"
                             Maximum="100"
                             Value="{Binding ProgressPercent}"/>

            </Grid>
        </Border>
    </Grid>

</UserControl>
