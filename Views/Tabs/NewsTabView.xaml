<UserControl x:Class="LegendBorn.Views.Tabs.NewsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="640"
             d:DesignWidth="980"
             Focusable="False">

    <Grid>
        <Border Style="{StaticResource ScreenFrameStyle}">
            <Grid>
                <Image Source="pack://application:,,,/Resources/Assets/legendcraft.jpg"
                       Stretch="UniformToFill"
                       Opacity="0.18"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <Rectangle Fill="#B0060718"/>

                <Border Padding="26">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Новости"
                                           Foreground="{StaticResource TextStrongLocal}"
                                           FontSize="22"
                                           FontWeight="Bold"/>

                                <TextBlock Margin="0,4,0,0"
                                           Foreground="{StaticResource TextDimLocal}"
                                           FontSize="12"
                                           Text="Обновления проекта и объявления. Нажми на карточку, чтобы открыть новость."/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Top">

                                <Button Style="{StaticResource GhostButton}"
                                        Content="Открыть сайт"
                                        Height="34"
                                        Padding="14,0"
                                        Margin="0,0,10,0"
                                        Click="OpenSite_OnClick"/>

                                <Button Style="{StaticResource WinCtlButton}"
                                        ToolTip="На главную"
                                        Click="OpenStart_OnClick">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Content -->
                        <ScrollViewer Grid.Row="2"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      CanContentScroll="True">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="820"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="1">

                                    <!-- Intro -->
                                    <Border Background="#0C000000"
                                            BorderBrush="{StaticResource StrokeGlow}"
                                            BorderThickness="1"
                                            CornerRadius="18"
                                            Padding="14"
                                            Margin="0,0,0,14">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Лента новостей"
                                                           Foreground="{StaticResource TextStrongLocal}"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Margin="0,4,0,0"
                                                           Foreground="{StaticResource TextDimLocal}"
                                                           FontSize="11"
                                                           Text="Источник: legendborn.ru"/>
                                            </StackPanel>

                                            <Border Grid.Column="1"
                                                    Style="{StaticResource NewsTagPillStyle}"
                                                    VerticalAlignment="Top">
                                                <TextBlock Text="LIVE"
                                                           Foreground="{StaticResource TextStrongLocal}"
                                                           FontWeight="SemiBold"
                                                           FontSize="11"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- News list -->
                                    <ItemsControl>
                                        <ItemsControl.ItemsSource>
                                            <PriorityBinding>
                                                <!-- VM -->
                                                <Binding Path="ProjectNews"/>
                                                <!-- fallback: Window-level коллекция (если вдруг так) -->
                                                <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ProjectNews"/>
                                            </PriorityBinding>
                                        </ItemsControl.ItemsSource>

                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource NewsCardButtonStyle}"
                                                        Tag="{Binding Url}"
                                                        Click="OpenNewsItem_OnClick">
                                                    <Border Style="{StaticResource NewsCardStyle}">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="8"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="10"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <!-- Title + date -->
                                                            <Grid Grid.Row="0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="{Binding Title}"
                                                                           Foreground="{StaticResource TextStrongLocal}"
                                                                           FontWeight="Bold"
                                                                           FontSize="14"
                                                                           TextTrimming="CharacterEllipsis"/>

                                                                <Border Grid.Column="1"
                                                                        Background="#141A2E"
                                                                        BorderBrush="#2A2F49"
                                                                        BorderThickness="1"
                                                                        CornerRadius="999"
                                                                        Padding="10,4"
                                                                        VerticalAlignment="Top">
                                                                    <TextBlock Foreground="{StaticResource TextDimLocal}"
                                                                               FontSize="11"
                                                                               Text="{Binding Date}"/>
                                                                </Border>
                                                            </Grid>

                                                            <!-- Summary -->
                                                            <Border Grid.Row="2"
                                                                    Background="#0C000000"
                                                                    BorderBrush="#2A2F49"
                                                                    BorderThickness="1"
                                                                    CornerRadius="12"
                                                                    Padding="10">
                                                                <TextBlock Foreground="{StaticResource TextDimLocal}"
                                                                           FontSize="12"
                                                                           TextWrapping="Wrap"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           MaxHeight="48"
                                                                           Text="{Binding Summary}"/>
                                                            </Border>

                                                            <!-- CTA -->
                                                            <Grid Grid.Row="4">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="8"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Border Grid.Column="0"
                                                                        CornerRadius="10"
                                                                        Background="#1A203A"
                                                                        Padding="8,4">
                                                                    <TextBlock Text="Читать"
                                                                               Foreground="{StaticResource TextStrongLocal}"
                                                                               FontWeight="SemiBold"
                                                                               FontSize="11"/>
                                                                </Border>

                                                                <TextBlock Grid.Column="3"
                                                                           Foreground="{StaticResource TextDimLocal}"
                                                                           FontSize="12"
                                                                           Text="↗"
                                                                           VerticalAlignment="Center"/>
                                                            </Grid>

                                                        </Grid>
                                                    </Border>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Border Height="10" Background="Transparent"/>

                                </StackPanel>
                            </Grid>
                        </ScrollViewer>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
